model Question {
  id          String   @id @default(cuid())
  title       String
  topics      String[] // Array of topics like "DP", "Graph", etc.
  difficulty  Difficulty
  source      String?  // Platform like "LeetCode", "GeeksforGeeks", etc.
  link        String?  // URL to the problem
  dateSolved  DateTime?
  code        String?  // Code solution
  explanation String?  // Markdown explanation/notes
  tags        String[] // Additional tags
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("questions")
}

enum Difficulty {
  Easy
  Medium
  Hard
}

model Company {
  id        String   @id @default(cuid())
  name      String
  salary    String?
  status    ApplicationStatus @default(APPLIED)
  feedback  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

enum ApplicationStatus {
  APPLIED
  INTERVIEW_SCHEDULED
  INTERVIEW_COMPLETED
  SELECTED
  REJECTED
  OFFER_RECEIVED
  OFFER_ACCEPTED
  OFFER_DECLINED
}
